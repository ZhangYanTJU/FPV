# gnuplot script to draw convergence 
var=7
set autoscale                          # scale axes automatically
set logscale y
set xtic auto                          # set xtics automatically
set ytic auto                          # set ytics automatically
set title "Convergence of mixing layer"
set xlabel "Steps"
set ylabel "Residuum"
set terminal png
set output 'convergence.png'
plot    "<grep RESID cstprop_1st.out" u 2:var title 'cstprop 1st' with lines , \
        "<grep RESID cstprop_2nd.out" u 2:var title 'cstprop 2nd' with lines , \
        "<grep RESID varprop_1st.out" u 2:var title 'varprop 1st' with lines , \
        "<grep RESID varprop_2nd.out" u 2:var title 'varprop 2nd' with lines
