# gnuplot script to draw convergence 
set autoscale                        # scale axes automatically
unset log                              # remove any log-scaling
unset label                            # remove any previous labels
set xtic auto                          # set xtics automatically
set ytic auto                          # set ytics automatically
#set yrange [0.0:2e5]
set title "pressure"
set xlabel "x"
set ylabel "p"
set terminal png
set output 'wallpressure.png'
plot    "<sort -gk 1 bottom.dat" u 1:5 w l t 'bottom wall' , \
        "<sort -gk 1 bottom.reference.dat" u 1:5 w p t 'bottom wall reference' , \
        "<sort -gk 1 top.dat" u 1:5 w l t 'top wall' , \
        "<sort -gk 1 top.reference.dat" u 1:5 w p t 'top wall reference'

