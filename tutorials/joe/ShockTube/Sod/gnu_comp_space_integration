# GNUPLOT script to plot numerical solution vs. exact solution and compare different run types

# Screen output 
set terminal x11 persist
set key outside                        # put legend outside 
unset log                              # remove any log-scaling
unset label                            # remove any previous labels
set xtic auto                          # set xtics automatically
set ytic auto                          # set ytics automatically
set xrange [-5:5]
#set yrange [0.0:2e5]
set title "Sod shock tube: Density"
set xlabel "$x$"
set ylabel "$\\rho$"

plot    "<sort -gk 1 ./exact.dat"                u 1:2 w p lw 1 lt 1 t 'Exact', \
        "<sort -gk 1 ./shocktube_HLLC.dat"       u 1:2 w l lw 1 lt 1 t 'HLLC', \
        "<sort -gk 1 ./shocktube_AUSMDV_A.dat"   u 1:2 w l lw 1 lt 2 t 'AUSMDV ALPHA', \
        "<sort -gk 1 ./shocktube_AUSMDV_H.dat"   u 1:2 w l lw 1 lt 3 t 'AUSMDV HAENEL', \
        "<sort -gk 1 ./shocktube_HAENEL.dat"     u 1:2 w l lw 1 lt 4 t 'HAENEL'

# Output for latex
set nokey
set notitle
set terminal epslatex color
set output "shocktube_sod_comp.tex"
replot
