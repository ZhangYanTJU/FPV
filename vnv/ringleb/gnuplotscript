# gnuplot script to draw convergence 
set autoscale                        # scale axes automatically
set log                              # remove any log-scaling
unset label                            # remove any previous labels
set xtic auto                          # set xtics automatically
set ytic auto                          # set ytics automatically
set title "convergence"
set xlabel "dx"
set ylabel "L2 error"
set terminal png
set output 'convergence.png'
plot    "convergence.dat" u 7:7 title 'first order' with linespoints , \
        "convergence.dat" u 7:8 title 'second order' with linespoints, \
        "convergence.dat" u 7:9 title 'JOE' with linespoints
